{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react",
    "paths": {
      "~*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/*"
  ],
  "exclude": ["node_modules/**/*"]
}
